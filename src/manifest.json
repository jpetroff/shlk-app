{
  "manifest_version":3,
  "version":"1.0.1",
  "name":"shlk.cc â€” copy and create shortlinks",
  "icons": {
    "48": "/assets/favicon/mstile-70x70.png",
    "96": "/assets/favicon/mstile-70x70.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "bookmarks",
    "alarms",
    "cookies",
    "storage",
    "browsingData"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8002/",
    "https://shlk.cc/",
    "https://localhost/"
  ],
  "action":{
    "default_popup": "index.html",
    "default_icon": "/assets/favicon/chrome_extension_icon.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module" //optional
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Shorten active tab URL"
    }
  }
}