{
  "compilerOptions": {
    "outDir": ".dist/js",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./node_modules/chrome-types/*.d.ts"
  ]
}